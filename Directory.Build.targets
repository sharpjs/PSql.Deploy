          Pack="true" PackagePath="" CopyToOutputDirectory="Never" />
    <None Include="..\README.md" LinkBase="Properties"
          Pack="true" PackagePath="" CopyToOutputDirectory="Never" />
  </ItemGroup>

  <!-- Visibility -->
  <ItemGroup>
    <InternalsVisibleTo Include="PSql.Deploy.Engine.Tests" />
    <InternalsVisibleTo Include="PSql.Deploy.Tests" />
