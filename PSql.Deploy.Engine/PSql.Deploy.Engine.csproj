  <PropertyGroup>
    <Description>PSql Deployment Engine</Description>
    <RootNamespace>PSql.Deploy</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <!-- TODO: Ship NuGet package -->
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DependencyQueue" />
    <PackageReference Include="IsExternalInit" PrivateAssets="all" />
    <PackageReference Include="Prequel" />
    <PackageReference Include="Required" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Data.SqlClient" />
  </ItemGroup>

  <ItemGroup>
    <Using Remove="System.Management.Automation" />
    <Using Include="Microsoft.Data.SqlClient" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="**\*.sql" />
    <EmbeddedResource Include="**\*.sql" />
  </ItemGroup>

</Project>
