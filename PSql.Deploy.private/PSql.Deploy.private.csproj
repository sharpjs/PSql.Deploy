  <PropertyGroup>
    <Description>PSql.Deploy Isolatable Interface to Dependencies</Description>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RuntimeIdentifiers>win-arm;win-arm64;win-x64;win-x86;unix</RuntimeIdentifiers>
    <RootNamespace>PSql.Deploy</RootNamespace>
    <IsPackable>false</IsPackable>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <!-- ^^ Opt dependencies out via IncludeAssets="compile" -->
  </PropertyGroup>

  <!-- Public dependencies -->
  <ItemGroup>
    <PackageReference Include="System.Management.Automation"
                      Version="[7.0.0, 8.0.0)" IncludeAssets="compile" PrivateAssets="all" />

    <ProjectReference Include="..\PSql.Deploy.Core\PSql.Deploy.Core.csproj"
                      Private="false" />

    <Reference Include="PSql" HintPath="$(PSqlDirectory)PSql.dll"
               Private="false" />

    <Reference Include="PSql.Core" HintPath="$(PSqlDirectory)PSql.Core.dll"
               Private="false" />
  </ItemGroup>

  <ItemGroup>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Prequel"
                      Version="1.0.3" IncludeAssets="compile" PrivateAssets="all" />

    <PackageReference Include="Microsoft.Data.SqlClient"
                      Version="5.0.1" IncludeAssets="compile" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="PSql.Deploy" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Microsoft.Data.SqlClient" />
    <Using Include="Microsoft.Data.SqlClient" Alias="Mds" />
  </ItemGroup>

</Project>
